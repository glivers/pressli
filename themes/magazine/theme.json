{
    "name": "Magazine Theme",
    "version": "2.0.1",
    "author": "Pressli Team",
    "description": "A bold, magazine-style theme with featured content grids and rich media support. Ideal for news sites and content-heavy publications.",
    "screenshot": "screenshot.png",
    "requires": {
        "php": "^7.4",
        "pressli-cms": "^1.0"
    },
    "templates": {
        "post": {
            "template": "single.php",
            "data_providers": [
                "post_categories",
                "post_comment_count",
                "recent_posts",
                "popular_posts",
                "featured_posts",
                "categories"
            ]
        },
        "page": {
            "template": "page.php",
            "data_providers": [
                "recent_posts",
                "categories"
            ]
        },
        "archive": {
            "template": "archive.php",
            "data_providers": [
                "recent_posts",
                "popular_posts",
                "featured_posts",
                "categories"
            ]
        },
        "404": {
            "template": "404.php",
            "data_providers": [
                "recent_posts",
                "popular_posts",
                "categories"
            ]
        },
        "home": {
            "template": "index.php",
            "data_providers": [
                "post_categories",
                "post_comment_count",
                "recent_posts",
                "popular_posts",
                "featured_posts",
                "categories"
            ]
        }
    },
    "settings": {
        "primary_color": "#e74c3c",
        "show_author": true,
        "posts_per_page": 15,
        "show_comments": true
    }
}
