{
    "name": "Minimal Theme",
    "version": "1.2.0",
    "author": "Pressli Team",
    "description": "A clean, minimalist theme focusing on typography and whitespace. Perfect for writers and bloggers who want content to shine.",
    "screenshot": "screenshot.png",
    "requires": {
        "php": "^7.4",
        "pressli-cms": "^1.0"
    },
    "templates": {
        "post": {
            "template": "single.php",
            "data_providers": [
                "post_categories",
                "recent_posts",
                "categories"
            ]
        },
        "page": {
            "template": "page.php",
            "data_providers": [
                "recent_posts",
                "categories"
            ]
        },
        "archive": {
            "template": "archive.php",
            "data_providers": [
                "recent_posts",
                "categories"
            ]
        },
        "404": {
            "template": "404.php",
            "data_providers": [
                "recent_posts",
                "categories"
            ]
        },
        "home": {
            "template": "index.php",
            "data_providers": [
                "post_categories",
                "recent_posts",
                "categories"
            ]
        }
    },
    "settings": {
        "primary_color": "#2c3e50",
        "show_author": true,
        "posts_per_page": 12,
        "show_comments": false
    }
}
